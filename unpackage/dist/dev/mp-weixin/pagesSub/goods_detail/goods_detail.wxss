.goods-carts {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
swiper {
  height: 750rpx;
  width: 750rpx;
}
swiper image {
  width: 750rpx;
  height: 750rpx;
}
.goods-info-box {
  padding: 10px;
  padding-right: 0;
}
.goods-info-box .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-info-box .goods-info-body .goods-name {
  font-size: 13px;
  padding-right: 10px;
}
.goods-info-box .goods-info-body .favi {
  width: 120px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #efefef;
  color: gray;
}
.goods-info-box .yf {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}

